<div class="row ">
    <div class="col-md-12">
        <h2>Categories</h2>
        <a href="/categories/add" class="btn btn-success">Add Category</a>
        <hr />
        {{#if data.message}}
            <div >
                {{data.message}}
            </div>
        {{else}}
            <br><br>
            <div class="table-responsive text-center">
                <table class="table table-striped">
                    <thead>
                        <tr >
                            <th class="text-center">Id</th>
                            <th class="text-center">Value</th>
                        </tr>
                    </thead>
                    {{#each data}}
                        <tbody>
                            <tr>
                                <td><a href="posts?category={{id}}">{{id}}</a></td>
                                <td><a href="posts?category={{id}}">{{category}}</a></td>
                                <td><a href="category/delete/{{id}}" class="btn btn-danger">Remove</a></td>
                            </tr>
                        </tbody>
                    {{/each}}
                </table>
            </div>
        {{/if}}
    </div>
</div>
